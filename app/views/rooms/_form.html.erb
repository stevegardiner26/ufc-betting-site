<div class="form-container">
  <h2>Create a New Betting Room</h2>
  <%= bootstrap_form_for [@room] do |f| %>
    <%= f.text_field :name, required: true %>
    <%= f.text_field :starting_balance, required: true %>
    <% if f.object.persisted? %>
      <%= f.submit :Update %>
    <% else %>
      <%= f.submit :Create %>
    <% end %>
  <% end %>
</div>